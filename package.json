{
  "name": "automation",
  "version": "1.0.0",
  "description": "sample cypress bdd template",
  "main": "index.js",
  "scripts": {
    "test": "node_modules/.bin/cypress run",
    "headTest": "npm run test -- --headed",
    "chromeTest": "npm run test -- --browser chrome --reporter mochawesome",
    "start:matrixTest": "npm run --browser=\"${{ matrix.browser }}\" --env TAGS=\"${{ matrix.tags }}\",configFile=${{ matrix.env }}"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "cucumberJson": {
      "generate": true,
      "outputFolder": "cypress/reports/cucumber-json",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    }
  },
  "devDependencies": {
    "cypress": "^8.6.0",
    "cypress-cucumber-preprocessor": "^1.7.0",
    "mocha": "^9.1.3",
    "mochawesome": "^3.1.2",
    "multiple-cucumber-html-reporter": "^1.18.0"
  },
  "dependencies": {
    "prettier": "^2.4.1"
  }
}
